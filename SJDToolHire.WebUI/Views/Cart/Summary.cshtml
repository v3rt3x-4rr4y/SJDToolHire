@model SJDToolHire.Domain.Entities.Cart

<div class="navbar-right hidden-xs">
    @Html.ActionLink("View Basket", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-info navbar-btn" })
</div>

<div class="navbar-right visible-xs">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }) class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>

<div class="navbar-text navbar-right">
    <b class="hidden-xs">Your basket: @Model.Lines.Sum(x => x.Quantity) item(s), @Model.ComputeTotalValue().ToString("c")</b>
</div>