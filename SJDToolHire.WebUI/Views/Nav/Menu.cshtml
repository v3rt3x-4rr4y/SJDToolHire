@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Tool", null, new { @class = "btn btn-block btn-default" })

@foreach (var link in Model)
{
    @Html.RouteLink(link,
                    new {controller = "Tool", action = "List", category = link, page = 1}, 
                    new {@class = "btn btn-block " + (link == ViewBag.SelectedCategory ? "btn-primary" : "btn-default")})
}